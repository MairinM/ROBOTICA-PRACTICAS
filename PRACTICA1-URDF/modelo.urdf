<robot name="spherical_robot">
  
  <!-- Materiales -->
  <material name="red">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="green">
    <color rgba="1 1 1"/>
  </material>
  <material name="blue">
    <color rgba="1 1 1"/>
  </material>
  <material name="yellow">
    <color rgba="1 1 1 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <!-- Definición de eslabones -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="0.25 0.25 0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="shoulder_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.08" length="0.4"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <link name="arm_link">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="forearm_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.6"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <!-- Definición de juntas -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="-3.14" upper="3.14" velocity="1.0"/>
  </joint>

  <joint name="arm_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="arm_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10.0" lower="-1.74" upper="1.74" velocity="1.0"/>
  </joint>

  <joint name="forearm_joint" type="prismatic">
    <parent link="arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="0" upper="0.3" velocity="0.5"/>
  </joint>
</robot>

